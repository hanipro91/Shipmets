@model ShipmentTracking.Models.Shipments

@{
    ViewData["Title"] = "DeleteShipment";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Delete Shipment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Shipments</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd>
            <img src="~/images/@Program.GetSourceLogo(Model.Source)" class="img-thumbnail" height="60" width="60" />
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.location)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ExepectedEstmatedTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExepectedEstmatedTime)
        </dd>
        <dt>
            Expected Deliver Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExpectedDeleiverDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RealEstmatedTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RealEstmatedTime)
        </dd>
        <dt>
            Deliver Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeleiveredDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Weight) K.G.
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="DeleteShipmentConfirmed">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Shipments">Back to List</a>
    </form>
</div>
