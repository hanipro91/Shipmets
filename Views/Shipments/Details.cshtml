@model ShipmentTracking.Models.Shipments

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><img src="~/images/shipment.png" class="logo-48" /> Shipment Details </h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.location)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt title="Time expected for shipment to deliver to it's dsitenation.">
            @Html.DisplayNameFor(model => model.ExepectedEstmatedTime)
        </dt>
        <dd title="Time expected for shipment to deliver to it's dsitenation.">
            @Html.DisplayFor(model => model.ExepectedEstmatedTime) day(s)
        </dd>
        <dt title="Real duration time in days that spent to deliver shipment.">
            @Html.DisplayNameFor(model => model.RealEstmatedTime)
        </dt>
        <dd title="Real duration time in days that spent to deliver shipment.">
            @Html.DisplayFor(model => model.RealEstmatedTime) day(s)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Weight) K.G.
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
